<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uoh.mapper.BookMapper">

    <resultMap id="BaseResultMap" type="com.uoh.model.entity.Book">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="bookName" column="book_name" jdbcType="VARCHAR"/>
            <result property="cover" column="cover" jdbcType="VARCHAR"/>
            <result property="bookIntroduction" column="book_ introduction" jdbcType="VARCHAR"/>
            <result property="author" column="author" jdbcType="VARCHAR"/>
            <result property="publisher" column="publisher" jdbcType="VARCHAR"/>
            <result property="publishDate" column="publish_date" jdbcType="DATE"/>
            <result property="isbn" column="isbn" jdbcType="VARCHAR"/>
            <result property="totalStock" column="total_stock" jdbcType="INTEGER"/>
            <result property="totalBorrowedCount" column="total_borrowed_count" jdbcType="INTEGER"/>
            <result property="availableStock" column="available_stock" jdbcType="INTEGER"/>
            <result property="borrowedCount" column="borrowed_count" jdbcType="INTEGER"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="price" column="price" jdbcType="DECIMAL"/>
            <result property="language" column="language" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,book_name,cover,
        author,publisher,publish_date,
        isbn,total_stock,available_stock,
        borrow_count,status,price,
        language,create_time,update_time
    </sql>
</mapper>
